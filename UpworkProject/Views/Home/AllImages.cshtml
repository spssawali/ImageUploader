@model IEnumerable<UpworkProject.Models.Image>

@{
    ViewData["Title"] = "AllImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex justify-content-between">
    <h3>All Image</h3>
    <div class="d-flex align-content-center">
        <a href="~/home/Images?sessionId=@ViewBag.SessionId" class="btn btn-primary">View Image</a>
        <a href="~/home?sessionId=@ViewBag.SessionId" class="btn btn-primary ms-1">Add Image</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                SessionId
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item._id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SessionId)
                </td>
                <td>
                    <a href="@Url.Content("~/uploads/"+@item.ImageName)" data-fancybox="gallery" data-caption="@item.ImageName">
                        View
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>
